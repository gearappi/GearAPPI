{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "types": ["reflect-metadata"],
        "lib": ["es6"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*"]
}
