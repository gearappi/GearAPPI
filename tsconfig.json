{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist/src",
        "rootDir": "src",
        "allowSyntheticDefaultImports" : true,
        "esModuleInterop" : true,
        "types": ["reflect-metadata"],
        "lib": ["es6"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*",
        "node_modules/@types/node/globals.d.ts"
    ]
}
